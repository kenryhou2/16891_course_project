<launch>
  <!-- Namespace for this MoveIt instance (e.g. "robot1", "robot2") -->
  <arg name="robot_ns" default="" doc="Namespace for this MoveIt instance"/>

  <!-- Planning pipeline (OMPL, etc.) -->
  <arg name="pipeline" default="ompl"/>
  <!-- Database settings -->
  <arg name="db" default="false"/>
  <arg name="db_path" default="$(find robot1_moveit_config)/default_warehouse_mongo_db"/>
  <!-- Debug mode -->
  <arg name="debug" default="false"/>
  <!-- Load or override robot_description -->
  <arg name="load_robot_description" default="true"/>
  <!-- Controller manager: fake, simple, or ros_control -->
  <arg name="moveit_controller_manager" default="fake"/>
  <arg name="fake_execution_type" default="interpolate"/>
  <!-- joint_state_publisher GUI -->
  <arg name="use_gui" default="false"/>
  <!-- launch RViz? -->
  <arg name="use_rviz" default="true"/>

  <!-- All nodes and includes live under /$(arg robot_ns)/ ... -->
  <group ns="$(arg robot_ns)">
    <!-- Static TF from world to this robotâ€™s base_link -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="virtual_joint_broadcaster_0"
          args="0 0 0 0 0 0 world $(arg robot_ns)_base_link"/>

    <!-- Fake joint_state_source if using fake controllers -->
    <group if="$(eval arg('moveit_controller_manager') == 'fake')">
      <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"
            unless="$(arg use_gui)">
        <rosparam param="source_list">[move_group/fake_controller_joint_states]</rosparam>
      </node>
      <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui"
            type="joint_state_publisher_gui" if="$(arg use_gui)">
        <rosparam param="source_list">[move_group/fake_controller_joint_states]</rosparam>
      </node>
      <node name="robot_state_publisher" pkg="robot_state_publisher"
            type="robot_state_publisher" respawn="true" output="screen"/>
    </group>

    <!-- MoveIt core -->
    <include file="$(dirname)/move_group.launch">
      <arg name="allow_trajectory_execution" value="true"/>
      <arg name="moveit_controller_manager" value="$(arg moveit_controller_manager)"/>
      <arg name="fake_execution_type"      value="$(arg fake_execution_type)"/>
      <arg name="info"                     value="true"/>
      <arg name="debug"                    value="$(arg debug)"/>
      <arg name="pipeline"                 value="$(arg pipeline)"/>
      <arg name="load_robot_description"   value="$(arg load_robot_description)"/>
      <!-- Pass namespace into move_group if supported -->
      <arg name="robot_namespace"          value="$(arg robot_ns)"/>
    </include>

    <!-- RViz -->
    <include file="$(dirname)/moveit_rviz.launch" if="$(arg use_rviz)">
      <arg name="rviz_config" value="$(dirname)/moveit.rviz"/>
      <arg name="debug"      value="$(arg debug)"/>
      <arg name="robot_namespace" value="$(arg robot_ns)"/>
    </include>

    <!-- Warehouse DB -->
    <include file="$(dirname)/default_warehouse_db.launch" if="$(arg db)">
      <arg name="moveit_warehouse_database_path" value="$(arg db_path)"/>
      <arg name="robot_namespace" value="$(arg robot_ns)"/>
    </include>
  </group>
</launch>
